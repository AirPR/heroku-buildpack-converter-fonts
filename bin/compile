#!/usr/bin/env bash

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

BUILD_DIR="$1"
SOURCE_DIR="$(dirname $0)/../fonts"
TARGET_DIR="$BUILD_DIR/.fonts"

echo "-----> Extracting fonts to $TARGET_DIR"

#verbose
set -x

ls -la "$TARGET_DIR"
mkdir -p "$TARGET_DIR"
ln -s Verdana.ttf $TARGET_DIR/verdana.ttf
ln -s Verdana_Bold.ttf $TARGET_DIR/verdanab.ttf
ln -s Verdana_Italic.ttf $TARGET_DIR/verdanai.ttf
ln -s Verdana_Bold_Italic.ttf $TARGET_DIR/verdanaz.ttf

set -x
#cp -v $SOURCE_DIR/* $TARGET_DIR | indent
